#!/bin/sh
# Auto-format staged Rust files before commit.

# Find staged .rs files
STAGED=$(git diff --cached --name-only --diff-filter=ACM -- '*.rs')
[ -z "$STAGED" ] && exit 0

# Use cargo fmt which reads edition from Cargo.toml
cargo fmt

# Re-stage the formatted files
echo "$STAGED" | xargs git add

exit 0
